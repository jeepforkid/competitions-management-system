<%- include('../partials/header', { title: 'تسجيل الدخول', user: null }) %>

<div class="flex justify-center items-center min-h-[70vh]">
    <div class="w-full max-w-md bg-white rounded-lg shadow-lg p-8">
        <h2 class="text-2xl font-bold mb-6 text-center text-primary">تسجيل الدخول</h2>

        <% if (messages.error && messages.error.length > 0) { %>
            <div class="bg-red-100 text-red-700 p-3 rounded mb-4">
                <ul>
                    <% messages.error.forEach(function(msg) { %>
                        <li><%= msg %></li>
                    <% }) %>
                </ul>
            </div>
        <% } %>

        <% if (messages.success && messages.success.length > 0) { %>
            <div class="bg-green-100 text-green-700 p-3 rounded mb-4">
                <ul>
                    <% messages.success.forEach(function(msg) { %>
                        <li><%= msg %></li>
                    <% }) %>
                </ul>
            </div>
        <% } %>

        <form action="/auth/login" method="POST" class="space-y-6">
            <div>
                <label for="username" class="block mb-1 font-semibold">اسم المستخدم</label>
                <input type="text" id="username" name="username" required autofocus
                    class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-primary" />
            </div>

            <div>
                <label for="password" class="block mb-1 font-semibold">كلمة المرور</label>
                <input type="password" id="password" name="password" required
                    class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-primary" />
            </div>

            <button type="submit" class="w-full btn-primary py-2 rounded font-semibold hover:bg-indigo-700 transition">
                تسجيل الدخول
            </button>
        </form>
    </div>
</div>

<%- include('../partials/footer') %>
