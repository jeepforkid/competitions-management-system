# إعدادات التطبيق
PORT=3000
NODE_ENV=development

# المفتاح السري للجلسات
SESSION_SECRET=your_super_secret_key_here

# إعدادات قاعدة البيانات PostgreSQL
DATABASE_URL=postgres://postgres:postgres@localhost:5432/competitions_db

# إعدادات قاعدة البيانات المفصلة (تستخدم إذا لم يتوفر DATABASE_URL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=competitions_db
DB_USER=postgres
DB_PASSWORD=postgres

# إعدادات التطبيق الإضافية
MAX_UPLOAD_SIZE=5242880 # 5MB
ALLOWED_FILE_TYPES=csv,xlsx,xls
DEFAULT_LANGUAGE=ar
DEFAULT_TIMEZONE=Asia/Riyadh

# إعدادات الأمان
JWT_SECRET=your_jwt_secret_key_here
PASSWORD_SALT_ROUNDS=10
SESSION_TIMEOUT=3600000 # ساعة واحدة بالميلي ثانية

# إعدادات البريد الإلكتروني (إذا تم إضافة ميزة إرسال البريد لاحقاً)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASS=your_email_password
